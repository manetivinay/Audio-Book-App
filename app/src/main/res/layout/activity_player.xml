<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".utils.PlayerActivity">

    <ImageView
        android:id="@+id/down_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="34dp"
        android:src="@drawable/down_small"
        app:layout_constraintBottom_toBottomOf="@id/book_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/book_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="34dp"
        android:ellipsize="end"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:lineHeight="24dp"
        android:maxLines="1"
        android:textColor="#2E2E5D"
        android:textFontWeight="500"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@id/more_iv"
        app:layout_constraintStart_toEndOf="@id/down_iv"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Hello World Hello World hello World Hello World hello World" />

    <ImageView
        android:id="@+id/more_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="35dp"
        android:src="@drawable/more"
        app:layout_constraintBottom_toBottomOf="@id/book_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/book_title"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_image_cover"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="28dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintBottom_toTopOf="@id/album_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/book_title">

        <ImageView
            android:id="@+id/image_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/image_cover_1" />

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/album_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="53dp"
        android:ellipsize="end"
        android:fontFamily="@font/poppins_medium"
        android:lineHeight="30dp"
        android:maxLines="1"
        android:textColor="#010104"
        android:textFontWeight="500"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_view_image_cover"
        tools:text="Harry Potter and the Prisoner of Azkaban" />

    <TextView
        android:id="@+id/author_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="53dp"
        android:ellipsize="end"
        android:fontFamily="@font/poppins_regular"
        android:gravity="left"
        android:lineHeight="24dp"
        android:maxLines="1"
        android:textFontWeight="400"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/album_title"
        tools:text="J.K.Rowling" />


    <SeekBar
        android:id="@+id/seek_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="20dp"
        android:progress="35"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/author_title" />

    <TextView
        android:id="@+id/start_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:fontFamily="@font/poppins_medium"
        android:lineHeight="15dp"
        android:text="00:00"
        android:textFontWeight="400"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/seek_bar" />

    <TextView
        android:id="@+id/end_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="35dp"
        android:fontFamily="@font/poppins_medium"
        android:lineHeight="15dp"
        android:text="00:00"
        android:textFontWeight="400"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/seek_bar" />


    <ImageView
        android:id="@+id/volume_up_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/volume_up"
        app:layout_constraintBottom_toTopOf="@id/player_bottom_menu"
        app:layout_constraintEnd_toStartOf="@+id/previous_left_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/start_timer" />


    <ImageView
        android:id="@+id/previous_left_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/left_arrow_circle"
        app:layout_constraintBottom_toTopOf="@id/player_bottom_menu"
        app:layout_constraintEnd_toStartOf="@+id/play_pause_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/volume_up_button"
        app:layout_constraintTop_toBottomOf="@id/start_timer" />


    <ImageView
        android:id="@+id/play_pause_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/play"
        app:layout_constraintBottom_toTopOf="@id/player_bottom_menu"
        app:layout_constraintEnd_toStartOf="@+id/next_right_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/previous_left_button"
        app:layout_constraintTop_toBottomOf="@id/start_timer" />


    <ImageView
        android:id="@+id/next_right_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/right_arrow_cirlce"
        app:layout_constraintBottom_toTopOf="@id/player_bottom_menu"
        app:layout_constraintEnd_toStartOf="@+id/upload_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/play_pause_button"
        app:layout_constraintTop_toBottomOf="@id/start_timer" />

    <ImageView
        android:id="@+id/upload_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/upload"
        app:layout_constraintBottom_toTopOf="@id/player_bottom_menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/next_right_button"
        app:layout_constraintTop_toBottomOf="@id/start_timer" />


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/player_bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="?android:attr/windowBackground"
        android:foreground="?attr/selectableItemBackground"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/player_menu"
        tools:itemIconTint="#000000"
        tools:itemTextColor="#000000" />

</androidx.constraintlayout.widget.ConstraintLayout>